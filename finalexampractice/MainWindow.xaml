<Window x:Class="finalexampractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finalexampractice"
        mc:Ignorable="d"
        Title="MainWindow" Height="483" Width="691.25">
    <Grid Background="#FFE0B5B5">
        <ListBox  x:Name="personellist" HorizontalAlignment="Left" Height="284" Margin="40,31,0,0" VerticalAlignment="Top" Width="303" SelectionMode="Single" SelectionChanged="personellist_SelectionChanged"/>
        <Button x:Name="Add" Content="ADD" HorizontalAlignment="Left" Margin="387,31,0,0" VerticalAlignment="Top" Width="111" Height="43" Click="Add_Click" Background="#FFDCBDBD"/>
        <Button Content="UPDATE" HorizontalAlignment="Left" Margin="387,123,0,0" VerticalAlignment="Top" Width="111" Height="53" Click="Button_Click" Background="#FFE0C4C4"/>
        <Button x:Name="Delete" Content="DELETE" HorizontalAlignment="Left" Margin="387,214,0,0" VerticalAlignment="Top" Width="111" Height="44" Click="Delete_Click" Background="#FFDEC4C4" />
    </Grid>
</Window>
